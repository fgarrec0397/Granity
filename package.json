{
  "name": "granity",
  "version": "0.1.8",
  "author": "Fabrice Garrec",
  "license": "MIT",
  "homepage": "https://github.com/fgarrec0397/Granity#readme",
  "description": "A React Three Fiber widgets based game engine.",
  "repository": {
    "type": "git",
    "url": "https://github.com/fgarrec0397/Granity"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:no-coverage": "turbo run test:no-coverage",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "prepare": "husky install",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "husky": "^8.0.2",
    "standard-version": "^9.5.0",
    "turbo": "^1.6.3"
  },
  "dependencies": {
    "workspaces": "^0.1.0"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "testing-config-granity"
  ]
}
